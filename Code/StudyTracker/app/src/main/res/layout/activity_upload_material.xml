<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadMaterial">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorNavyBlue"
        android:fontFamily="@font/pt_sans_bold"
        android:gravity="center"
        android:paddingHorizontal="60dp"
        android:paddingVertical="12dp"
        android:text="Upload a PDF file"
        android:textColor="@color/colorWhite"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/selectPDF"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="80dp"
        android:background="@color/colorLightGreen"
        android:fontFamily="@font/pt_sans_bold_italic"
        android:gravity="center_horizontal|center_vertical"
        android:paddingHorizontal="12dp"
        android:paddingVertical="4dp"
        android:text="Select File"
        android:textColor="@color/colorWhite"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/upload"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@color/colorNavyBlue"
        android:fontFamily="@font/pt_sans_bold"
        android:gravity="center_horizontal|center_vertical"
        android:paddingHorizontal="12dp"
        android:paddingVertical="12dp"
        android:text="Upload"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectPDF" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="154dp"
        android:layout_height="164dp"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_title"
        app:srcCompat="@drawable/pdf_logo" />

</androidx.constraintlayout.widget.ConstraintLayout>